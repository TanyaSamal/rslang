{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "stripInternal": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "typeRoots": [
      "node_modules/@types/"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}
